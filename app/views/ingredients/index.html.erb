<h1>All the ingredients</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name of Ingredients</th>
        </tr>
    </thead>
    <tbody>

    <% @ingredients.each do |ingredient| %>

        <tr>
            <td><%= ingredient.id %></td>
            <td><%= ingredient.name %></td>
        </tr>
      
    <% end %>

    </tbody>
</table>

<%# table,
td {
    border: 1px solid #333;
}

thead,
tfoot {
    background-color: #333;
    color: #fff;
} %>

